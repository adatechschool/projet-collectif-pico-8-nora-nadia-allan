--player

local framedelay = 15		

function player_movement()
	dx=p.x
	dy=p.y
	if (btn(➡️)) p.x+=1
	if (btn(⬅️)) p.x-=1
	if (btn(⬇️)) p.y+=1
	if (btn(⬆️)) p.y-=1
	
	if  collide(p) then
		p.x=dx
		p.y=dy
	end
end

function plant_seeds()
 local plantx=(p.x+4)/8
 local planty=(p.y+7)/8
 
 if btnp(❎) then
	 if fget(mget(plantx,planty),1) then
		 mset(plantx,planty,13)
		 add (seeds,{
	   sx=flr(plantx),
	   sy=flr(planty),
	   tig=0 --time in ground
	   })
	 elseif fget(mget(plantx,planty),2) then
	 	--collect carrot
	 	mset(plantx,planty,0)
	 	for s in all(seeds) do
	 		if s.sx==flr(plantx) and s.sy==flr(planty) then
	 			del(seeds,s)
	 		end
	 	end--for
	 end
 end
end

function animation_sprite()

	if framedelay >0 then
		framedelay-=1
		return
 end
 
 framedelay = 15
 
	if p.sprite<4 then 
		p.sprite+=1
	else
		p.sprite=1
	end
end


