	croptimer=300
	seeds={ }
end

function updatecrops()
	for s in all(seeds) do
    s.tig+=1
    
   if s.tig>300  then
    mset(s.sx,s.sy,14)
   end
   
 end
end

function drawcrops()
	print(croptimer)
end

