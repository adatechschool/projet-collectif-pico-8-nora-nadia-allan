--make_objects

objects={}

function make_object(x,y,sprite)
	local object = {}
	object.x = x
	object.y = y
	object.sprite = sprite
	add(objects,object)
	return object
end

function draw_objects()
	spr(p.sprite,p.x,p.y)
	spr(dog.sprite,dog.x,dog.y)
end
