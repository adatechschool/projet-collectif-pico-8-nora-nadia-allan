--make_objects

objects={}

function make_object(x,y,sidle,h,w)
	local object = {}
	object.x = x
	object.y = y
	object.sidle = sidle
	object.smovex = smovex
	object.smovey = smovey
	object.dx = 0
	object.dy = 0
	object.h = h
	object.w = w
	object.ismoving = false
	add(objects,object)
	return object
end

function draw_objects()
	spr(p.sidle,p.x,p.y)
	spr(dog.sidle,dog.x,dog.y)
end
