function follow()

if dog.x < p.x then
 dog.x += 0.5
  elseif dog.x > p.x then
    dog.x -= 0.5
  end

  if dog.y < p.y then
    dog.y += 0.5
  elseif dog.y > p.y then
    dog.y -= 0.5
  end
end
