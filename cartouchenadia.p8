local framedelay = 15		
 
function player_movement()
	if (btn(➡️)) p.x+=1
	if (btn(⬅️)) p.x-=1
	if (btn(⬇️)) p.y+=1
	if (btn(⬆️)) p.y-=1
end

function animation_sprite()

	if framedelay >0 then
		framedelay-=1
		return
 end
 
 framedelay = 15
 
	if p.sidle<5 then 
		p.sidle+=1
	else
		p.sidle=2
	end
end


