local framedelay = 15		

function create_player()
	p={}
		p.x=1
		p.y=1
		p.idle=1
		p.leftright=5
		p.topdown=9
		p.box={x1=0,y1=0,x2=7,y2=7}
		p.w=7
		p.h=7
		p.ismoving = false
end

function player_movement()
	if (btn(➡️)) p.x+=1
	if (btn(⬅️)) p.x-=1
	if (btn(⬇️)) p.y+=1
	if (btn(⬆️)) p.y-=1
end


function animation_sprite()

	if framedelay >0 then
		framedelay-=1
		return
 end
 
 framedelay = 15
 
	if p.idle<4 then 
		p.idle+=1
	else
		p.idle=1
	end
end

function draw_player()
	spr(p.idle,p.x*10,p.y*10)
end
