--crops grows--

function icrops()
 croptimer=300
 seeds={ }
end

function ucrops()
 --if croptimer>0 then
    --croptimer-=1
 --else
    --growcrops()
    --croptimer=300
 for s in all(seeds) do
    s.tig+=1
    
   if s.tig>300  then
    mset(s.sx,s.sy,5)
   end
   
 end
end

function dcrops()
 print(croptimer)
end

